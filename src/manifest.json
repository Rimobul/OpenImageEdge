{
    "author": "Lubomir Sokolovsky",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "default_locale": "en",
    "description": "Now you can open images in new tabs even in Edge!",
    "icons": {
        "25": "images/color-changer25.png",
        "48": "images/color-changer48.png"
    },
    "manifest_version": 1,
    "name": "Open Image Edge",
    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "version": "1.0"
}